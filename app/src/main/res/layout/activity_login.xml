<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45D659"
    android:foregroundTint="#321A1A"
    android:outlineAmbientShadowColor="#81DA38"
    android:outlineSpotShadowColor="#74BD38">

    <LinearLayout
        android:layout_width="419dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="58dp"
            android:layout_marginRight="62dp"
            android:layout_marginBottom="8dp"
            android:text="HOLA DE NUEVO!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="292dp"
            android:layout_height="49dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="2dp"
            android:text="Inicia sesión para revisar el estado del cultivo"
            android:textColor="#423636"
            android:textSize="17sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="62dp">

            <EditText
                android:id="@+id/editText"
                android:layout_width="294dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="text"
                android:text=""
                android:hint="Usuario"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="62dp">

            <EditText
                android:id="@+id/editTextP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="text|textPassword"
                android:visibility="visible"
                android:hint="Contraseña"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/b_iniciar_s"
            android:password="false"
            android:text="INICIAR SESIÓN"
            android:visibility="visible" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/b_olvidar_c"
            android:foregroundTint="#000000"
            android:text="Registrarse"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>